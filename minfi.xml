<tool id="minfi" name="Minfi">
    <description>Analyze Illumina's 450k methylation arrays</description>
    <requirements>
        <requirement type="R-module" version="1.15.7">minfi</requirement>
    </requirements>
    <command><![CDATA[
        kraken --db $DBNAME --threads $NUM $input1  > $output1
    ]]></command>
    <inputs>
        <param type
        <param type="data" name="input1" format="fa" />
    </inputs>
    <outputs>
        <data name="output1" format="txt" from_work_dir="classified_seqs.txt" />
    </outputs>
    <help><![CDATA[
        Multithreading: Use the "--threads NUM" switch to use multiple threads
    ]]></help>
</tool>